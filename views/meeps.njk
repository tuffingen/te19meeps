{% extends layout %}
{% block content %}
    <main class="container">
        <div class="grp">
            <ul class="list-group">
                <form action="/meeps" method="post">
                    <div class="input-group mb-3">
                        <input type="meep" name="meep" id="meep" value="{{ meep }}" class="form-control" placeholder="Meep something..." aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Post</button>
                        </div>
                    </form>
                    {% for meep in meeps %}
                        <div class="card">
                            <div class="card-header">
                                Username
                                <div class="btn-group dropend  float-end">
                                    <button type="button" class="dots" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="/meeps/{{ meep.id }}/delete" class="dropdown-item">
                                                Delete
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/meeps/{{ meep.id }}" method="GET">
                                                <input type="submit" value="Edit" class="dropdown-item">
                                            </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                            </div>
                            <div class="card-body">
                                <blockquote class="blockquote mb-0">
                                    <p>{{ meep.body }}</p>
                                    <footer class="blockquote-footer">{{ meep.created_at }}
                                    </footer>
                                </blockquote>
                            </div>
                        </div>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endblock %}
</main>